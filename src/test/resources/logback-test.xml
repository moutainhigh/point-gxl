<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="10 minutes">
  <contextName>point</contextName>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="ROOT_FILE">
    <file>${user.home}/XQuark/logs/point-test.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>${user.home}/XQuark/logs/%d{yyyy-MM-dd}/web.%i.log</FileNamePattern>
      <MaxHistory>100</MaxHistory>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 100MB -->
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <!-- 格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{loginname}] %-5level %logger{50} - %msg%n
      </pattern>
    </encoder>
    <!--
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
        <MaxFileSize>100MB</MaxFileSize>
    </triggeringPolicy>
    -->
  </appender>

  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <!-- 格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{loginname}] %-5level %logger{50} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="${log.level.common:-INFO}">
    <appender-ref ref="ROOT_FILE"/>
    <appender-ref ref="STDOUT"/>
  </root>

  <logger level="${log.level.xquark:-INFO}" name="com.hds.xquark"/>

</configuration>
